@model IEnumerable<E_Learning.DAL.Models.Faculty>

@{
    ViewData["Title"] = "ViewFaculty";
}

<h1>ViewFaculty</h1>

<p>
    <a asp-action="CreateFaculty">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditFaculty", new { id=item.Id }) |
                @Html.ActionLink("Details", "FacultyDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteFaculty", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
