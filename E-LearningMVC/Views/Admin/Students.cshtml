@model IEnumerable<E_Learning.DAL.Models.Student>

@{
    ViewData["Title"] = "ViewStudent";
}

<h1>ViewStudent</h1>

<p>
    <a asp-action="CreateStudent">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStudent", new {  id= item.Id }) |
                @Html.ActionLink("Details", "StudentDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteStudent", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
