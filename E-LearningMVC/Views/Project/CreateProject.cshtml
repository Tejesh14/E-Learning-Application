@model E_LearningMVC.Models.ProjectModel

@{
    ViewData["Title"] = "CreateProject";
}

<h1 class="display-4 mt-3" style="color: #FF9F1C">CreateProject</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="myFile" style="color: #FFFFFF" class="text-light">Upload File</label>
                <input style="color: #FFFFFF" id="myFile" type="file" name="file" />
            </div>
            <div class="form-group">
                <label asp-for="project" class="control-label text-light"> Project Name</label>
                <input asp-for="project" class="form-control" />
                <span asp-validation-for="project" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm" style="background-color: #FF9F1C" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color: #CBF3F0">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
